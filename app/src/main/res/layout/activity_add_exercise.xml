<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AddExercise"
        android:background="@drawable/bg_main">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add New Exercise"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/back_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/back_arrow"
            app:layout_constraintBottom_toBottomOf="@id/back_arrow" />

        <View
            android:id="@+id/horizontal_delimiter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/dark_mediumBG"
            app:layout_constraintTop_toBottomOf="@id/back_arrow"
            android:layout_margin="@dimen/_10sdp" />

        <TextView
            android:id="@+id/choose_muscle_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Choose muscle group"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/horizontal_delimiter"
            app:layout_constraintStart_toStartOf="@id/horizontal_delimiter" />

        <Spinner
            android:id="@+id/spinner_muscles"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/spinner_bg"
            android:popupBackground="@drawable/spinner_bg"
            android:spinnerMode="dropdown"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="@id/horizontal_delimiter"
            app:layout_constraintEnd_toEndOf="@id/horizontal_delimiter"
            app:layout_constraintTop_toBottomOf="@id/choose_muscle_tv" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down"
            app:tint="@color/white"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="@id/spinner_muscles"
            app:layout_constraintTop_toTopOf="@id/spinner_muscles"
            app:layout_constraintBottom_toBottomOf="@id/spinner_muscles"/>

        <TextView
            android:id="@+id/select_type_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select type of exercise"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toBottomOf="@id/spinner_muscles"
            app:layout_constraintStart_toStartOf="@id/horizontal_delimiter" />

        <LinearLayout
            android:id="@+id/box_shadow_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@id/horizontal_delimiter"
            app:layout_constraintEnd_toEndOf="@+id/horizontal_delimiter"
            app:layout_constraintTop_toBottomOf="@id/select_type_tv"
            android:background="@drawable/shadow2"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/exercises_names_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:minHeight="@dimen/_50sdp"
                tools:listitem="@layout/flexbox_ecercises_names_item"/>

            <EditText
                android:id="@+id/date_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:hint="Type in your own exercise"
                android:background="@drawable/bg_textview"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/light_gray"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/ubuntu_regular" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/box_shadow_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shadow2"
            android:padding="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@id/horizontal_delimiter"
            app:layout_constraintEnd_toEndOf="@+id/horizontal_delimiter"
            app:layout_constraintTop_toBottomOf="@id/box_shadow_1">

            <TextView
                android:id="@+id/how_many_sets_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="How many sets"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu_regular"
                app:layout_constraintTop_toTopOf="@id/box_shadow_2"
                app:layout_constraintStart_toStartOf="@id/box_shadow_2" />

            <EditText
                android:id="@+id/sets_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_textview"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="1"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/ubuntu_bold"
                app:layout_constraintTop_toBottomOf="@id/how_many_sets_tv" />

            <ImageView
                android:id="@+id/left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintTop_toTopOf="@id/sets_number"
                app:layout_constraintBottom_toBottomOf="@id/sets_number"
                app:layout_constraintStart_toStartOf="@id/sets_number" />

            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintTop_toTopOf="@id/sets_number"
                app:layout_constraintBottom_toBottomOf="@id/sets_number"
                app:layout_constraintEnd_toEndOf="@id/sets_number" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sets_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/sets_layout_item"
                android:layout_marginVertical="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/sets_number" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/save_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:text="Save"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textColor="@color/darkPurpleIntense"
            android:background="@drawable/save_bg_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/horizontal_delimiter"
            app:layout_constraintEnd_toEndOf="@id/horizontal_delimiter" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>