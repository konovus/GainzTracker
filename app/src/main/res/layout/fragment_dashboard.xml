<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DashboardFragment"
        android:background="@drawable/bg_main">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/welcome_tv"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Welcome,"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/ubuntu_light"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/name_tv"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Konovus"
                android:tag="New_user"
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/welcome_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_img"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_profile_placeholder"
                android:tint="@color/gray"
                app:civ_border_width="@dimen/_1sdp"
                app:civ_border_color="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/welcome_tv"
                app:layout_constraintBottom_toBottomOf="@id/welcome_tv"
                android:layout_marginEnd="@dimen/_20sdp" />

            <TextView
                android:id="@+id/your_wrk_summary_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Workout Summary"
                android:textColor="@color/light_gray"
                android:layout_marginTop="@dimen/_12sdp"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toBottomOf="@+id/name_tv"
                app:layout_constraintStart_toStartOf="@id/welcome_tv" />

            <Spinner
                android:id="@+id/spinner_months"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@drawable/spinner_bg"
                android:gravity="center_vertical"
                android:popupBackground="@drawable/spinner_bg"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toTopOf="@+id/your_wrk_summary_tv"
                app:layout_constraintBottom_toBottomOf="@id/your_wrk_summary_tv"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                app:tint="@color/white"
                android:paddingHorizontal="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="@id/spinner_months"
                app:layout_constraintTop_toTopOf="@id/spinner_months"
                app:layout_constraintBottom_toBottomOf="@id/spinner_months" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_h_workouts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:clipToPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner_months" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_v_workouts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="@dimen/_15sdp"
                android:clipToPadding="false"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/recyclerView_h_workouts"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/welcome_tv" />

<!--            <ImageView-->
<!--                android:id="@+id/add_workout"-->
<!--                android:layout_width="@dimen/_50sdp"-->
<!--                android:layout_height="@dimen/_50sdp"-->
<!--                app:layout_constraintTop_toBottomOf="parent"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                android:textAlignment="center"-->
<!--                android:elevation="@dimen/_3sdp"-->
<!--                android:padding="@dimen/_13sdp"-->
<!--                android:src="@drawable/ic_add_custom2"-->
<!--                app:tint="@color/darkPurple"-->
<!--                android:background="@drawable/add_bg_gradient" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>