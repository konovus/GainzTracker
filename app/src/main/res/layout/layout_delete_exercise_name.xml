<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutDeleteNoteContainer"
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="center"
        android:background="@drawable/bg_dialog">

        <ImageView
            android:id="@+id/imageDelete"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:src="@drawable/ic_delete"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:fontFamily="@font/ubuntu_bold"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:text="Delete Exercise"
            app:layout_constraintTop_toTopOf="@id/imageDelete"
            app:layout_constraintBottom_toBottomOf="@id/imageDelete"
            app:layout_constraintStart_toEndOf="@id/imageDelete"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/deleteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:fontFamily="@font/ubuntu_regular"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:padding="@dimen/_8sdp"
            android:text="Are you sure you want to delete this exercise?"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintTop_toBottomOf="@id/imageDelete" />

        <TextView
            android:id="@+id/deleteBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:fontFamily="@font/ubuntu_medium"
            android:includeFontPadding="false"
            android:padding="@dimen/_8sdp"
            android:text="DELETE"
            android:textColor="@color/red"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintTop_toBottomOf="@id/deleteText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/cancel_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:fontFamily="@font/ubuntu_medium"
            android:includeFontPadding="false"
            android:padding="@dimen/_8sdp"
            android:text="CANCEL"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintTop_toBottomOf="@id/deleteText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/deleteBTN" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>