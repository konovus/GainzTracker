<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/darkPurple"
                android:endColor="#2A2635"
                android:type="radial"
                android:gradientRadius="@dimen/_400sdp"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/darkPurple"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>