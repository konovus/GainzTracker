<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkPurple">

        <View
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_125sdp"
            android:background="@color/darkPurpleIntense"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log History"
            android:textSize="@dimen/_18ssp"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_img"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_profile_placeholder"
            android:tint="@color/gray"
            app:civ_border_width="@dimen/_1sdp"
            app:civ_border_color="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"
            android:layout_marginEnd="@dimen/_20sdp" />



        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/calendarContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_330sdp"
            android:background="@color/darkPurple"
            card_view:cardElevation="@dimen/_10sdp"
            app:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/title">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/darkPurple"/>
            <ViewStub
                android:id="@+id/stub_calendar"
                android:inflatedId="@string/calendar"
                android:layout="@layout/calendar_stub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/title"/>

<!--            <com.applandeo.materialcalendarview.CalendarView-->
<!--                android:id="@+id/calendar"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@drawable/bg_recycler_item"-->
<!--                app:selectionColor="@color/teal_200"-->
<!--                app:headerLabelColor="@color/white"-->
<!--                app:headerColor="@color/darkPurple"-->
<!--                app:abbreviationsBarColor="@color/darkPurple"-->
<!--                app:abbreviationsLabelsColor="@color/white"-->
<!--                app:pagesColor="@color/darkPurple"-->
<!--                app:daysLabelsColor="@color/white"-->
<!--                android:visibility="gone"/>-->

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingBottom="@dimen/_80sdp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/calendarContainer"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <RelativeLayout
            android:id="@+id/bottom_nav_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_mediumBG"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/dashboardBtn"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/ic_dash"
                app:tint="@color/gray"
                android:padding="@dimen/_8sdp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_35sdp" />

            <ImageView
                android:id="@+id/calendarBtn"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/white"
                android:padding="@dimen/_8sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_35sdp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/add_workout"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintTop_toTopOf="@id/bottom_nav_layout"
            app:layout_constraintBottom_toTopOf="@id/bottom_nav_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:elevation="@dimen/_3sdp"
            android:padding="@dimen/_13sdp"
            android:src="@drawable/ic_add_custom2"
            app:tint="@color/darkPurple"
            android:background="@drawable/add_bg_gradient" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>